{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "mocha" : true,
        "mongo" : true
    },
    "globals": {
      "Json": true,
      "request" : true,
      "response" : true,
      "console" : true,
      "module":true
    },
    "extends": "eslint:recommended",
    "rules": {
      "max-len": [
        2,
        80,
        4,
        {"ignoreComments": true}
      ],
      "indent": [
        "warn",
        4,
        {"SwitchCase": 1}
      ],
      "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
